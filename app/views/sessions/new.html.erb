<div class="container">
  <h1>Login</h1>

  <%= form_tag '/login', class: 'col s12' do %>
    <div class="row">
      <div class="input-field col s12">
        <%= label_tag 'username' %>
        <%= text_field_tag :username, nil, class: 'validate'%>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= label_tag 'password' %>
        <%= password_field_tag 'password', nil, class: 'validate' %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= button_tag "Login", type: 'submit',
                                class: 'btn-large waves-effect waves-light' %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col s12">
      <%= link_to 'Sign Up!', '/signup' %>
    </div>
  </div>

</div>
