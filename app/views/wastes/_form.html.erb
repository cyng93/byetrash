<%= form_for(@waste, html: {class: 'col s12'}) do |f| %>
  <div class="row">
    <div class="input-field col s12">
    <% if @waste.errors.any? %>
      <div id="error_explanation">
        <h2>Invalid form</h2>
        <ul>
          <% @waste.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: 'materialize-textarea' %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.label :description %><br>
      <%= f.text_field :description, class: 'materialize-textarea' %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.label :category %><br>
      <%= f.text_field :category, class: 'materialize-textarea' %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.label :image_name %><br>
      <%= f.text_field :image_name, class: 'materialize-textarea' %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.label :weight %><br>
      <%= f.number_field :weight, class: 'materialize-textarea' %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.submit class: 'btn waves-effect waves-light' %>
    </div>
  </div>
<% end %>
