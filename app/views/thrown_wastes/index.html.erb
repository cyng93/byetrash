<h3 class="center" >垃圾 History</h3>

<div class="divider"></div>
<div class="section">
<% no_trash = true %>
<% Waste.all.each do |waste| %>
  <% count = @user.thrown_wastes.where(waste_id: waste.id)
                   .where('created_at > ?', "2016-12-26 00:00:00 +0800".to_time)
                   .count() %>
  <% if count != 0 %>
    <% no_trash = false if no_trash == true %>
    <div class="col s12 m7">
      <div class="card horizontal">
        <div class="card-image">
          <%= image_tag(waste.image_name.to_s) %>
        </div>
        <div class="card-stacked">
          <div class="card-content">
            <h2 class="header"><%= count %></h2>
          </div>
        </div>
      </div>
    </div>

  <% end #if %>
<% end #do %>
<% if no_trash %> <!-- if no trash were threw yet -->
  <h5 class="center">No trash was thrown so far :)</h5>
<% end %>
</div>

<script>
  $(document).ready(function(){
    // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
    $('.modal').modal();
  });
</script>
